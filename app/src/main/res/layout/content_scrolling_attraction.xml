<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.century.zj.ui.main.Travel.Activity.AttractionActivity"
    tools:showIn="@layout/activity_attraction"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--app:layout_behavior属性触发滑动效果，前提是内容区是可滑动的-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/at_line">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/at_city"
            android:text="城市"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/city">

        </TextView>
        <ImageView
            android:id="@+id/at_weatherimg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cloudy">
        </ImageView>
        <TextView
            android:id="@+id/at_weather"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:text="多云"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/at_temperature"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="30℃"
            android:drawableLeft="@drawable/temperature"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/at_wind"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="北风1级"
            android:textSize="15sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bottomline">
    <TextView
        android:id="@+id/at_title"
        android:text="景点介绍"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/introduce"
        android:drawablePadding="8dp"
        android:layout_height="40dp"/>

            <TextView
                android:id="@+id/at_ar"
                android:drawableRight="@drawable/ar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="right"
                android:text="AR身临其境">

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/at_img"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </ImageView>
        <TextView
            android:id="@+id/at_info"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="景区介绍部分"
            android:textSize="14sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottomline"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/at_about"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/about"
                android:drawablePadding="8dp"
                android:text="景点相关"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/at_more"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableRight="@drawable/more"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="查看更多"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/at_about_img"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="150dp"
            android:layout_height="220dp">

        </ImageView>
        <TextView
            android:id="@+id/at_about_info"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="相关部分的介绍">
        </TextView>
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottomline"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/at_comment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="8dp"
                android:text="精选评论"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/at_circle"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableRight="@drawable/more"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="我的圈子"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/at_myname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="我的名字"/>
        <ImageView
            android:id="@+id/at_myimg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/at_user_comment"
            android:text="用户评价"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#e1EA0909"/>

        <TextView
            android:id="@+id/at_mynames"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp" />
        <ImageView
            android:id="@+id/at_myimgs"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/at_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottomline"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/at_mycomment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="8dp"
                android:text="用户评价"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/at_postcomment"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableRight="@drawable/more"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="发表评论"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView"
                android:minHeight="160dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
